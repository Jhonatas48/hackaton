@model hackaton.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/sharedStyles.css" type="text/css" />
</head>

<div class="header">
    <div class="header-logo">
        <img src="https://raw.githubusercontent.com/WarmMateTea/ImageRepo/1f98e9ba4b641cb18ce0d6dda5c66204564ff52a/logo%2Bnome.svg"></img>
    </div>
    <div class="header-buttons">
        <a asp-action="Login" type="button" class="btn btn-primary btn-override primary-color-override btn-header">
            <span>Login</span>
        </a>
        <a asp-action="Index" type="button" class="btn btn-primary btn-override primary-color-override btn-header">
            <span>Home</span> <img src="https://raw.githubusercontent.com/WarmMateTea/ImageRepo/976c737dd815789553dc686c0984cba499f04a76/orange-home.svg" class="icon home"></img>
        </a>
    </div>
</div>
<div class="main_container">

    <div class="main_card signup">

        <div class="content">
            <form asp-action="Register" style="min-width:100%">
            @Html.AntiForgeryToken()
            <div class="leading-generic">
                <div class="techagro">
                    <img class="" src="https://raw.githubusercontent.com/WarmMateTea/ImageRepo/65e4d9fad851957ac1143355782bb104f666fe12/techagro-nome.svg" />
                    @*<span class="text_primary">tech</span><span class="text_secondary">agro</span>*@
                </div>
                <div class="heading">
                    <span>Crie sua conta</span>
                </div>
                <div class="detail">
                    <span>Comece a desfrutar de nossos serviços!</span>
                </div>
            </div>
            <div class="trailing">
                <div class="inputs">

                        <div asp-validation-summary="ModelOnly" class="detail text-danger-override"></div>
                    <div class="form-group" style="min-width:100%">
                        <label class="input-description">Nome</label>
                        <div class="input env" data-cluster="btn1">
                            <div class="sub">
                                <input class="form-control textbox" data-cluster="btn1" placeholder="Digite seu nome aqui" asp-for="Name">
                            </div>
                        </div>
                            <span asp-validation-for="Name" class="detail text-danger-override"></span>
                    </div>

                    <div class="form-group" style="min-width:100%">
                        <label class="input-description">Senha</label>
                        <div class="input env" data-cluster="btn1">
                            <div class="sub">
                                <img src="https://raw.githubusercontent.com/WarmMateTea/ImageRepo/f85728639824166be9728567f69f6f2289494d2e/vpn_key_FILL0_wght400_GRAD0_opsz48.svg" class="icon"></img>
                                <input class="form-control textbox" data-cluster="btn1" type="password" placeholder="●●●●●●" asp-for="Password">
                            </div>
                                <div class="icon eye"></div>
                        </div>
                        <span asp-validation-for="Password" class="detail text-danger-override"></span>
                    </div>


                        @*                    <div class="form-group" style="min-width:100%">    <!--PRECISA AJEITAR ISSO PRA BATER COM A OUTRA SENHA-->
                        <label class="input-description">Confirmar Senha</label>
                        <div class="input env" data-cluster="btn1">
                            <div class="sub">
                                <img src="https://raw.githubusercontent.com/WarmMateTea/ImageRepo/f85728639824166be9728567f69f6f2289494d2e/vpn_key_FILL0_wght400_GRAD0_opsz48.svg" class="icon"></img>
                                <input class="textbox" data-cluster="btn1" type="password" placeholder="●●●●●●" name="confirmPassword" @Validation.For("confirmPassword")/>
                            </div>
                            <img src="https://raw.githubusercontent.com/WarmMateTea/ImageRepo/f85728639824166be9728567f69f6f2289494d2e/visibility_off_FILL0_wght400_GRAD0_opsz48.svg" class="icon eye hide"></img>
                        </div>
                        <span asp-validation-for="" class="detail text-danger-override"></span>
                    </div*@

                    <div class="form-group" style="min-width:100%">
                        <label class="input-description">CPF</label>
                        <div class="input env" data-cluster="btn1">
                            <div class="sub">
                                <img src="https://raw.githubusercontent.com/WarmMateTea/ImageRepo/f85728639824166be9728567f69f6f2289494d2e/badge_FILL0_wght400_GRAD0_opsz48.svg" class="icon"></img>
                                <input class="form-control textbox cpf" data-cluster="btn1" placeholder="123.456.789-00" asp-for="CPF">
                            </div>
                            <div class="icon checkmark"></div>
                        </div>
                            <span asp-validation-for="CPF" class="ver-cpf detail text-danger-override"></span>
                    </div>
                </div>

                <div class="actions">
                    <div class="form-group" style="min-width:100%">
                        <input type="submit" value="Registrar" class="btn btn-primary btn-override primary-color-override">
                    </div>
                </div>

            </div>
            </form>
        </div>

    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<script src="/js/module-textbox-focus.js"></script>
<script src="/js/module-password-eye-visibility.js"></script>
<script src="/js/module-cpf-verification.js"></script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
